<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#121B28"
     >


    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="  -HAMS-   "
        android:textSize="15dp"
        android:textColor="@color/white" />

    <TextView
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:id="@+id/textView_hospital"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="TextView"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        tools:ignore="RtlHardcoded">
        <TextView
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/todoRepairNum"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:text="@{}"
            android:padding="4dp"
            app:drawableLeftCompat="@drawable/__rectangle"
            android:drawablePadding="6dp"

            >
        </TextView>
        <TextView
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/underRepairNum"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:text=" under"
            android:padding="4dp"
            app:drawableLeftCompat="@drawable/__rectangle"
            android:drawablePadding="6dp"
            app:drawableTint="@color/gold">
        </TextView>
        <TextView
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/todoCheckNum"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:text=" todo"
            android:padding="4dp"
            android:drawableLeft="@drawable/__rectangle"
            android:drawableTint="@color/springgreen"
            android:drawablePadding="6dp"
            >
        </TextView>
        <TextView
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:id="@+id/text_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-- -- --   " />

    <ImageButton
        android:focusable="true"
        android:padding="7dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/fillet02"
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/____6_" >
    </ImageButton>

    </LinearLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>